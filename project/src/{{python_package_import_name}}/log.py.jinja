from __future__ import annotations

import logging


def get_logger(name: str) -> logging.Logger:
    """Get a logger for the given name.

    Args:
        name: The name of the logger.
              Will be prefixed with '{{ python_package_import_name }}'

    Returns:
        A logger instance
    """
    return logging.getLogger(f"{{ python_package_import_name }}.{name}")
